{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des abscences par classes</h2>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Classe</th>


                                </tr>
                                </thead>
                                <tbody>
                                {% for classe in classes %}

                                    <tr class="gradeX">

                                        <td class="text-center"> {{ classe.createAt|date('d-m-Y') }}</td>
                                        <td class="text-center"><a
                                                    href="{{ path('abscencedate',{'idperiode': idperiode , 'idclasse':classe.id}) }}">{{ classe.name }}</a>
                                        </td>

                                    </tr>
                                {% endfor %}

                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
