{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste de tous les absents du <strong>{{ date|date('d-m-Y') }}</strong></h2>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <form action="{{ path('abscenceallstudent') }}" method="post">
                                <div class="col-md-6" style="margin-left:30%;">
                                    <div class="form-group">
                                        <label class="form-label"> Date</label>

                                        <select class="select2 form-control" name="date" required>

                                            <option value="">Selectionnez une date</option>

                                            {% for abscencedate in abscencedates %}
                                                <option value={{ abscencedate.datejours }}>{{ abscencedate.datejours |date('d-m-Y ') }}</option>
                                            {% endfor %}


                                        </select>

                                    </div>

                                </div>

                                <div class="form-group" style="margin-right: 47%;">
                                    <button class="btn btn-md btn-primary pull-right" type="submit">Filtre</button>
                                </div>
                            </form>
                            <br>
                            <div class="">
                                <a data-toggle="modal" data-target="#create" class="btn btn-primary" href="{{ path('pdfallabscence', {'createdAt': 'x'}) }}">Télécharger pdf</a>
                            </div>
                        </div>

                        <div class="table-responsive">

                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr>
                                    <th class="text-center">Nom</th>
                                    <th class="text-center">Classe</th>


                                </tr>
                                </thead>
                                <tbody>

                                {% for allabsent in allabsents %}
                                    {% for user in allabsent.student %}
                                        {% for classe in user.userclasse %}
                                        <tr class="gradeX">

                                            <td class="text-center">{{ user }}</td>
                                            <td class="text-center">
                                                {{ classe}}
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    {% endfor %}
                                {% endfor %}

                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
