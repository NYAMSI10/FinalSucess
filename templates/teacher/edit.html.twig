{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

	<div class="row wrapper border-bottom white-bg page-heading">
		<div class="col-lg-10">
			<h2>Modification d'un enseignant</h2>

		</div>
		<div class="col-lg-2"></div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">

				<div class="ibox-content">
					{{ form_start(form ) }}

					<div class="my-custom-class-for-errors">
						{{ form_errors(form) }}
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.firstname) }}
								<spa style="color: red">*</spa>
								{{ form_widget(form.firstname) }}

							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.lastname) }}
								<spa style="color: red">*</spa>
								{{ form_widget(form.lastname) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.email) }}
								<spa style="color: red">*</spa>
								{{ form_widget(form.email) }}
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.phone) }}
								<spa style="color: red">*</spa>
								{{ form_widget(form.phone) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.quartier) }}
								<spa style="color: red">*</spa>
								{{ form_widget(form.quartier) }}
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label class="form-label">
									Classe
									<spa style="color: red">*</spa>
								</label>
								<select class="form-control select2" name="classe[]" multiple="multiple">
									{% for classe in user.userclasse %}
										<option selected="selected" value="{{ classe.id }}">{{ classe.name }}</option>
									{% endfor %}
									{% for clas in classes %}
										<option value="{{ clas.id }}">{{ clas.name }}</option>
									{% endfor %}


								</select>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label class="form-label">
									Matiére
									<spa style="color: red">*</spa>
								</label>
								<select class="form-control select2" name="matiere[]" multiple="multiple">
									{% for matiere in user.usermatiere %}
										<option selected="selected" value="{{ matiere.id }}">{{ matiere.name }}</option>
									{% endfor %}
									{% for mat in matieres %}
										<option value="{{ mat.id }}">{{ mat.name }}</option>
									{% endfor %}

								</select>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label class="form-label">
									Pérode
									<spa style="color: red">*</spa>
								</label>
								<select class="form-control select2" name="periode[]" multiple="multiple">
									{% for periode in periodes %}
										<option selected="selected" value="{{ periode.id }}">{{ periode.name }}</option>
									{% endfor %}
									{% for perio in perios %}
										<option value="{{ perio.id }}">{{ perio.name }}</option>
									{% endfor %}
								</select>
							</div>
						</div>
					</div>
					<div class="row">

						<div class="col-lg-6">
							<div class="form-group">
								<label class="form-label">
									Role
									<spa style="color: red">*</spa>
								</label>
								<select class="form-control select2" name="role">
									<option value="0">Enseignant</option>
									<option value="1">Administrateur</option>

								</select>
							</div>
						</div>

					</div>
					<br>
					<div class="form-group" style="margin-right: 47%;">
						<button class="btn btn-md btn-primary pull-right" type="submit">Valider</button>
					</div>
					<br>
				</div>


				{{ form_end(form) }}


			</div>
		</div>
	</div>


{% endblock %}
