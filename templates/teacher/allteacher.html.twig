{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des enseignants ({{ periodes.name }}) </h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr >
                                    <th class="text-center">Nom  </th>
                                    <th class="text-center">Prénom</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Quartier</th>
                                    <th class="text-center">Tel</th>
                                    <th class="text-center">Salaire</th>
                                    <th class="text-center">Action</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr class="gradeX" id="presence-{{ user.id }}">
                                        <td class="text-center"> {{ user.firstname }}</td>
                                        <td class="text-center">{{ user.lastname}}</td>
                                        <td class="text-center">{{ user.email}}</td>
                                        <td class="text-center">{{ user.quartier}}</td>
                                        <td class="text-center">{{ user.phone}}</td>
                                        <td class="text-center">   <a class="btn btn-space btn-info btn-xs voir"
                                                                      href="{{ path('allsalaire',{'id': user.id}) }}"><i
                                                        class="fa fa-1x fa-money sr-icons"></i></a></td>
                                        </td>
                                        <td class="text-center">
                                            <a target="_blank" class=" btn btn-space btn-primary btn-xs sr-icons "
                                               style="color:white;" href="{{ path('updateteacher',{'id': user.id}) }}"><i
                                                        class="fa fa-1x fa-pencil sr-icons"></i> </a>
                                            <a target="_blank" class=" btn btn-space btn-danger btn-xs sr-icons "
                                               style="color:white;" onclick="deleteuser({{ user.id }})"><i
                                                        class="fa fa-1x fa-trash sr-icons" ></i> </a>

                                        </td>

                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function deleteuser(id) {

            alert('Voulez-vous vraiment supprimer cet enseignant?')


            // Effectuez une requête AJAX pour supprimer l'article des favoris
            fetch('deleteteacher/' + id, {
                method: 'POST',
            })
                .then(response => response.json())
                .then(data => {

                    // Mettez à jour la liste des favoris sur la page sans rafraîchir
                    // Par exemple, supprimez l'élément de la liste avec l'ID correspondant
                    const favoriteItem = document.getElementById('presence-' + id);
                    if (favoriteItem) {
                        favoriteItem.remove();
                    }
                    setTimeout(function () {
                        toastr.options = {
                            closeButton: true,
                            progressBar: true,
                            showMethod: 'slideDown',
                            timeOut: 4000
                        };

                        toastr.success('enseignant supprimée');

                    }, 1300);
                })
                .catch(error => {
                    console.error(error);
                });
        }
    </script>


{% endblock %}
