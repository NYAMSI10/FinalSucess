{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des cotisations </h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="">
                            <a href="{{ path('addcotisation') }}" class="btn btn-primary ">Ajouter
                                cotisation</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr>
                                    <th class="text-center">Nom de l'enseignant</th>
                                    <th class="text-center">Montant à cotiser</th>
                                    <th class="text-center">Mois à bouffer</th>
                                    <th class="text-center">Action</th>

                                </tr>
                                </thead>
                                <tbody>

                                   {% for cotisation in cotisations %}
                                    <tr class="gradeX">
                                        <td class="text-center"> {{ cotisation.usercotisation}} </td>
                                        <td class="text-center">  {{ cotisation.somme}} cfa </td>
                                        <td class="text-center"> {{ cotisation.moisbouffe}} </td>

                                        <td class="text-center">
                                            <a target="_blank" class=" btn btn-space btn-primary btn-xs sr-icons "
                                               style="color:white;" href="{{ path('updatecotisation',{'id': cotisation.id}) }}"><i
                                                        class="fa fa-1x fa-pencil sr-icons"></i> </a>
                                            <a target="_blank" class=" btn btn-space btn-danger btn-xs sr-icons "
                                               style="color:white;" href="{{ path('deletecotisation',{'id': cotisation.id}) }}"><i
                                                        class="fa fa-1x fa-trash sr-icons" onclick="return confirm('Voulez-vous supprimée cette cotisation?')"></i> </a>

                                        </td>

                                    </tr>

                                {% endfor %}

                                 </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
