{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des Élèves Insolvables du mois de <strong>{{ mois }}</strong>
            </h2>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <form action="{{ path('allinsolvable') }}" method="post">
                                <div class="col-md-6" style="margin-left:30%;">
                                    <div class="form-group">
                                        <label class="form-label"> Mois de paiement</label>

                                        <select class="select2 form-control" name="mois" required>

                                            <option value="">Selectionnez un mois</option>

                                            {% for moise in moispaie  %}
                                                <option value="{{ moise.mois }}">{{ moise.mois }}</option>
                                            {% endfor %}

                                        </select>

                                    </div>

                                </div>

                                <div class="form-group" style="margin-right: 47%;">
                                    <button class="btn btn-md btn-primary pull-right" type="submit">Filtre</button>
                                </div>
                            </form>

                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr>
                                    <th class="text-center">Nom</th>
                                    <th class="text-center">Montant Restant</th>

                                </tr>
                                </thead>
                                <tbody>

                                  {% for inso in insols %}
                                   {% if inso.reste !=0 %}
                                <tr class="gradeX">

                                    <td class="text-center">{{ inso.userscolarite }}</td>
                                    <td class="text-center" style="color: red"> {{ inso.reste }} Cfa</td>


                                </tr>
                                {% endif %}
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
