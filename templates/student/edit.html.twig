{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Modifier un élève</h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    {{ form_start(form ) }}

                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.firstname) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.firstname) }}

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.lastname) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.lastname) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.quartier) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.quartier) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.phone) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.phone) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.inscription) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.inscription) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.school) }}
                                <spa style="color: red">*</spa>
                                {{ form_widget(form.school) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label"> Classe
                                    <spa style="color: red">*</spa>
                                </label>
                                <select class="form-control select2" name="classe">

                                    {% for classe in user.userclasse %}
                                    {% for  clas in classes %}
                                        {% if  classe.name == clas.name %}
                                            <option selected="selected"
                                                    value="{{ classe.id }}">{{ classe.name }}</option>
                                        {% else %}
                                            <option
                                                    value="{{ clas.id }}">{{ clas.name }}</option>

                                        {% endif %}
                                    {% endfor %}
                                    {% endfor %}

                                </select>

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label"> Période
                                    <spa style="color: red">*</spa>
                                </label>
                                <select class="form-control select2" name="periode">
                                    {% for periode in user.userperiode %}
                                        {% for  perio in periodes %}
                                            {% if  periode.name == perio.name %}
                                                <option selected="selected"
                                                        value="{{ periode.id }}">{{ periode.name }}</option>
                                            {% else %}
                                                <option
                                                        value="{{ perio.id }}">{{ perio.name }}</option>

                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">

                                <label class="form-label"> Déja payer les frais de Rame de papier?
                                    <spa style="color: red">*</spa>
                                </label>
                                <select class="form-control select2" name="rame">
                                    {% if user.IsRame %}
                                        <option value="1">Oui</option>
                                        <option value="0">Non</option>
                                    {% else %}
                                        <option value="0">Non</option>
                                        <option value="1">Oui</option>

                                    {% endif %}
                                </select>
                            </div>
                        </div>


                    </div>
                    <br>
                    <div class="form-group" style="margin-right: 47%;">
                        <button class="btn btn-md btn-primary pull-right" type="submit">Valider</button>
                    </div>
                    <br>
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>


{% endblock %}
