{% extends('ComponentDashbord/index.html.twig') %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des périodes</h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="">
                            <a data-toggle="modal" data-target="#create" class="btn btn-primary ">Ajouter
                                période</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover " id="editable">
                                <thead>
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Période</th>
                                    <th class="text-center">Action</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for periode in periodes %}
                                    <tr class="gradeX" id="presence-{{ periode.id }}">
                                        <td class="text-center"> {{ periode.createAt|date('d-m-Y') }}</td>
                                        <td class="text-center">{{ periode.name}}
                                        </td>
                                        <td class="text-center">
                                            <a target="_blank" class=" btn btn-space btn-primary btn-xs sr-icons "
                                               style="color:white;" href="{{ path('updateperiode',{'id': periode.id}) }}"><i
                                                        class="fa fa-1x fa-pencil sr-icons"></i> </a>
                                            <a target="_blank" class=" btn btn-space btn-danger btn-xs sr-icons "
                                               style="color:white;" onclick="deleteperiode({{ periode.id }})"><i
                                                        class="fa fa-1x fa-trash sr-icons" ></i> </a>

                                        </td>

                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal inmodal" id="create" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated flipInY">
                {{ form_start(form) }}

                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(form.name) }}

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
                    <button type="button" class="btn btn-white" data-dismiss="modal"><i
                                class="fa fa-times"></i></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        function deleteperiode(id) {

            alert('Voulez-vous vraiment supprimer cette période?')


            // Effectuez une requête AJAX pour supprimer l'article des favoris
            fetch('deleteperiode/' + id, {
                method: 'POST',
            })
                .then(response => response.json())
                .then(data => {

                    // Mettez à jour la liste des favoris sur la page sans rafraîchir
                    // Par exemple, supprimez l'élément de la liste avec l'ID correspondant
                    const favoriteItem = document.getElementById('presence-' + id);
                    if (favoriteItem) {
                        favoriteItem.remove();
                    }
                    setTimeout(function () {
                        toastr.options = {
                            closeButton: true,
                            progressBar: true,
                            showMethod: 'slideDown',
                            timeOut: 4000
                        };

                        toastr.success('période supprimée');

                    }, 1300);
                })
                .catch(error => {
                    console.error(error);
                });
        }
    </script>

{% endblock %}
